<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroud_color"
    android:gravity="center"
    tools:context=".LoginActivity">
    <ImageView

        android:id="@+id/register_logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/p1"
        android:layout_width="match_parent"
        android:textColor="@color/white"
        android:layout_below="@+id/register_logo"
        android:text="Login"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginBottom="10sp"
        android:layout_height="wrap_content"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:boxStrokeColor="#FFFFFF"
        app:cursorColor="@color/black"
        app:hintTextColor="@color/white"
        app:boxBackgroundColor="@color/Orange"
        android:layout_below="@id/p1"
        android:textColorHint="@color/white"
        android:id="@+id/p2"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="0dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/phone"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:hint="Phone Number"
            android:layout_height="match_parent"
            tools:ignore="InvalidId" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:boxStrokeColor="#FFFFFF"
        app:cursorColor="@color/black"
        app:hintTextColor="@color/white"
        app:boxBackgroundColor="@color/Orange"
        android:layout_below="@id/p2"
        android:textColorHint="@color/white"
        android:id="@+id/p3"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="5dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/password"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:hint="Password"
            android:layout_height="match_parent"
            tools:ignore="InvalidId" />

    </com.google.android.material.textfield.TextInputLayout>



    <Button
       android:layout_marginLeft="130dp"
        android:layout_below="@+id/p3"
        android:id="@+id/btn_lonin"
        android:text="Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_below="@+id/btn_lonin"
        android:textStyle="bold"
        android:textSize="17dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/register_now"
        android:text="New at here? Sign Up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>