<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroud_color"
    android:gravity="center"
    tools:context=".ambulance.AddAmbulance">


    <ImageView

        android:id="@+id/register_logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/logo" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:boxStrokeColor="#FFFFFF"
        app:cursorColor="@color/black"
        app:hintTextColor="@color/white"
        app:boxBackgroundColor="@color/Orange"
        android:layout_below="@id/register_logo"
        android:textColorHint="@color/white"
        android:id="@+id/p1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="0dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/organization_name"
            android:textColor="@color/black"
            android:layout_width="match_parent"

            android:hint="Name"
            android:layout_height="match_parent"
            tools:ignore="InvalidId" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:boxStrokeColor="#FFFFFF"
        app:cursorColor="@color/black"
        app:hintTextColor="@color/white"
        app:boxBackgroundColor="@color/Orange"
        android:layout_below="@id/p1"
        android:textColorHint="@color/white"
        android:id="@+id/p2"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="0dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/phone_number"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:hint="Phone Number"
            android:layout_height="match_parent"
            tools:ignore="InvalidId" />

    </com.google.android.material.textfield.TextInputLayout>




    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:boxStrokeColor="#FFFFFF"
        app:cursorColor="@color/black"
        app:hintTextColor="@color/white"
        app:boxBackgroundColor="@color/Orange"
        android:layout_below="@id/p2"
        android:textColorHint="@color/white"
        android:id="@+id/p3"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/Area"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:hint="Area of service"
            android:layout_height="match_parent"
            tools:ignore="InvalidId" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:boxStrokeColor="#FFFFFF"
        app:cursorColor="@color/black"
        app:hintTextColor="@color/white"
        app:boxBackgroundColor="@color/Orange"
        android:layout_below="@id/p3"
        android:textColorHint="@color/white"
        android:id="@+id/p4"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/registration_no"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:hint="Registration No"
            android:layout_height="match_parent"
            tools:ignore="InvalidId" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:boxStrokeColor="#FFFFFF"
        app:cursorColor="@color/black"
        app:hintTextColor="@color/white"
        app:boxBackgroundColor="@color/Orange"
        android:layout_below="@id/p4"
        android:textColorHint="@color/white"
        android:id="@+id/p5"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/seat_no"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:hint="Number of Seat"
            android:layout_height="match_parent"
            tools:ignore="InvalidId" />

    </com.google.android.material.textfield.TextInputLayout>





       <Button

        android:id="@+id/submitbutton"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@id/p5"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/submitbtn"
        android:clickable="true"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Submit"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />


    <LinearLayout
        android:id="@+id/p6"
        android:layout_below="@+id/submitbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/backbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:src="@drawable/baseline_arrow_back_ios_24"/>

    </LinearLayout>



</RelativeLayout>